<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:rowCount="6"
    android:columnCount="4"
    >

    <FrameLayout
        android:layout_height="0dp"
        android:layout_rowWeight="2"
        android:layout_columnSpan="4"
        android:layout_width="match_parent">
        <EditText
            android:id="@+id/ekran"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-black"
            android:textSize="40sp"
            android:focusable="false"
            />
        <TextView
            android:id="@+id/txt_emel"
            android:layout_marginEnd="10dp"
            android:textSize="40sp"
            android:layout_gravity="end|top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </FrameLayout>

    <Button
        android:width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="AC"
        android:onClick="bas"
        android:layout_margin="2dp"
        android:textSize="30sp" />
    <Button
        android:width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="%"
        android:onClick="bas"
        android:layout_margin="2dp"
        android:textSize="30sp" />
    <Button
        android:width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="+/-"
        android:onClick="bas"
        android:layout_margin="2dp"
        android:textSize="30sp" />
    <Button
        android:width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="÷"
        android:onClick="bas"
        android:layout_margin="2dp"
        android:textSize="30sp" />
    <Button
        android:width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="7"
        android:onClick="bas"
        android:layout_margin="2dp"
        android:textSize="30sp" />
    <Button
        android:width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="8"
        android:onClick="bas"
        android:layout_margin="2dp"
        android:textSize="30sp" />
    <Button
        android:width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="9"
        android:onClick="bas"
        android:layout_margin="2dp"
        android:textSize="30sp" />
    <Button
        android:width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="×"
        android:onClick="bas"
        android:layout_margin="2dp"
        android:textSize="30sp" />
    <Button
        android:width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="4"
        android:onClick="bas"
        android:layout_margin="2dp"
        android:textSize="30sp" />
    <Button
        android:width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="5"
        android:onClick="bas"
        android:layout_margin="2dp"
        android:textSize="30sp" />
    <Button
        android:width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="6"
        android:onClick="bas"
        android:layout_margin="2dp"
        android:textSize="30sp" />
    <Button
        android:width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="-"
        android:onClick="bas"
        android:layout_margin="2dp"
        android:textSize="30sp" />
    <Button
        android:width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="1"
        android:onClick="bas"
        android:layout_margin="2dp"
        android:textSize="30sp" />
    <Button
        android:width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="2"
        android:onClick="bas"
        android:layout_margin="2dp"
        android:textSize="30sp" />
    <Button
        android:width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="3"
        android:onClick="bas"
        android:layout_margin="2dp"
        android:textSize="30sp" />
    <Button
        android:width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="+"
        android:onClick="bas"
        android:layout_margin="2dp"
        android:textSize="30sp" />
    <Button
        android:width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="0"
        android:onClick="bas"
        android:layout_margin="2dp"
        android:textSize="30sp" />
    <Button
        android:width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="."
        android:onClick="bas"
        android:layout_margin="2dp"
        android:textSize="30sp" />

    <Button
        android:width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="⌫"
        android:onClick="bas"
        android:layout_margin="2dp"
        android:textSize="30sp" />


    <Button
        android:width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="="
        android:onClick="bas"
        android:layout_margin="2dp"
        android:textSize="30sp" />

</GridLayout>